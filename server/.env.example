# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/contract_analyzer?schema=public"

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS_FREE=10
RATE_LIMIT_MAX_REQUESTS_PRO=100
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=1000

# Blockchain APIs
ETHERSCAN_API_KEY=your-etherscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
ARBISCAN_API_KEY=your-arbiscan-api-key

# AI Configuration (if using external AI API)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.1

# CORS
CORS_ORIGIN=http://localhost:5174,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_ROUNDS=12
MAX_CONTRACT_SIZE_BYTES=1048576
ALLOWED_CHAINS=ethereum,polygon,bsc,arbitrum,optimism

# PDF Generation
PDF_GENERATION_TIMEOUT=30000

# Email (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@contractanalyzer.com

# Sentry (Error Tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_CACHING=true
ENABLE_STATIC_ANALYSIS=true
ENABLE_PDF_REPORTS=true
ENABLE_AUDIT_LOGGING=true
